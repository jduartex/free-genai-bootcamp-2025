{
  "name": "visual-novel-aztec",
  "version": "1.0.0",
  "description": "An educational Japanese language learning visual novel with escape room mechanics",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "index.js",
  "scripts": {
    "setup": "node --loader ts-node/esm src/utils/CopyJsonFiles.ts",
    "build": "tsc && webpack --config webpack.config.cjs",
    "start": "npm run setup && webpack-dev-server --config webpack.config.cjs --open",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "generate:images": "node --loader ts-node/esm tools/generate-images.ts",
    "generate:placeholders": "node --loader ts-node/esm tools/generate-placeholders.ts",
    "generate:audio": "node --loader ts-node/esm tools/pre-generate-audio.ts",
    "generate:assets": "node --loader ts-node/esm tools/generate-all-assets.ts",
    "prestart": "node --loader ts-node/esm tools/safe-generate-audio.ts || echo 'Skipping audio generation'",
    "test:bedrock": "node --loader ts-node/esm test/bedrock-node-test.ts",
    "list:models": "NODE_NO_WARNINGS=1 node --loader ts-node/esm test/list-bedrock-models.ts",
    "clean": "rm -rf dist && rm -f tsconfig.tsbuildinfo",
    "list-models": "NODE_NO_WARNINGS=1 node test/list-bedrock-models.js",
    "test-bedrock": "NODE_NO_WARNINGS=1 node test/bedrock-node-test.js",
    "bedrock-test:exec": "./test/bedrock-node-test.js"
  },
  "keywords": [
    "phaser",
    "game",
    "japanese",
    "education",
    "visual-novel",
    "escape-room"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-bedrock": "^3.763.0",
    "@aws-sdk/client-bedrock-runtime": "^3.758.0",
    "@aws-sdk/client-polly": "^3.758.0",
    "@esotericsoftware/spine-phaser": "^4.2.15",
    "aws-sdk": "^2.1377.0",
    "axios": "^1.4.0",
    "canvas": "^3.1.0",
    "dotenv": "^16.4.7",
    "phaser": "^3.60.0",
    "uuid": "^9.0.0",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.5",
    "@types/uuid": "^9.0.1",
    "@types/webfontloader": "^1.6.36",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "buffer": "^6.0.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "crypto-browserify": "^3.12.1",
    "eslint": "^8.49.0",
    "file-loader": "^6.2.0",
    "glob": "^11.0.1",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "minimatch": "^10.0.1",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "url": "^0.11.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  }
}
