# OpenAI credentials (required)
OPENAI_API_KEY=your_openai_api_key_here

# AWS credentials (required for AWS Polly TTS)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# For neural voices like Kazuha, use one of: us-east-1, us-west-2, ap-northeast-1
AWS_REGION=us-east-1

# Google Cloud credentials (required for Google TTS)
# IMPORTANT: Use the ABSOLUTE path to your Google credentials JSON file, not a relative path
# Example for Mac/Linux: /Users/username/downloads/google-credentials.json
# Example for Windows: C:/Users/username/Downloads/google-credentials.json
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/your/google-credentials.json

# Database configuration
DATABASE_URL=sqlite:///./data/transcript_db.sqlite

# API configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# Rate limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100/hour

# Optional: Redis configuration for production rate limiting
# REDIS_URL=redis://localhost:6379/0
